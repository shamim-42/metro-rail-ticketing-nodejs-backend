{
  "info": {
    "_postman_id": "b1e1e1e1-1111-2222-3333-444444444444",
    "name": "Metro Rapid Pass API",
    "description": "Postman collection for Metro Rapid Pass backend API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5001/api" },
    { "key": "token", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "stationId", "value": "" },
    { "key": "tripId", "value": "" },
    { "key": "fareId", "value": "" }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"phoneNumber\": \"+1234567890\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/users/profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/users/profile",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Updated User\",\n  \"phoneNumber\": \"+1234567899\"\n}"
            }
          }
        },
        {
          "name": "Deposit Money",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/users/deposit",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100,\n  \"paymentMethod\": \"cash\"\n}"
            }
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/users/statistics"
          }
        }
      ]
    },
    {
      "name": "Station",
      "item": [
        {
          "name": "Create Station (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/stations",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dhaka University\",\n  \"code\": \"DU\",\n  \"latitude\": 23.7338,\n  \"longitude\": 90.3928,\n  \"address\": \"Dhaka University Campus\",\n  \"zone\": \"Central\",\n  \"facilities\": [\"parking\", \"wifi\"],\n  \"description\": \"Main campus station\"\n}"
            }
          }
        },
        {
          "name": "Get All Stations",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/stations"
          }
        },
        {
          "name": "Get Station By ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/stations/{{stationId}}"
          }
        }
      ]
    },
    {
      "name": "Fare",
      "item": [
        {
          "name": "Create Fare (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/fares",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromStation\": \"{{stationId}}\",\n  \"toStation\": \"{{stationId}}\",\n  \"fare\": 45,\n  \"distance\": 5.2,\n  \"duration\": 15,\n  \"fareType\": \"regular\"\n}"
            }
          }
        },
        {
          "name": "Get All Fares",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/fares"
          }
        },
        {
          "name": "Get Fare By ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/fares/{{fareId}}"
          }
        }
      ]
    },
    {
      "name": "Trip",
      "item": [
        {
          "name": "Create Trip",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/trips",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromStation\": \"{{stationId}}\",\n  \"toStation\": \"{{stationId}}\",\n  \"numberOfPassengers\": 1,\n  \"paymentMethod\": \"balance\"\n}"
            }
          }
        },
        {
          "name": "Get Trip History",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/trips/history"
          }
        },
        {
          "name": "Get Unused Trips",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/trips/unused"
          }
        },
        {
          "name": "Use Trip (Scan QR)",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/trips/use/{{tripId}}"
          }
        }
      ]
    }
  ]
} 